<h5>Bank Transactions From CSV</h5>

<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Transaction Code</th>
            <th>Valid Transaction?</th>
            <th>Customer Number</th>
            <th>Reference</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
    {% for transactionDetail in transactionDetails %}
        <tr>
            {% set lastItem = transactionDetail|last %}
            {% for value in transactionDetail %}
                {% if not loop.last %}
                    {% if lastItem == "Credit" and loop.index == 6 %}
                        <td style="color: red;">{{ value }}</td>
                    {% else %}
                        <td>{{ value }}</td>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </tr>
    {% endfor %}
    </tbody>
</table>